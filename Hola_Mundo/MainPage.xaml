<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Hola_Mundo.MainPage">

    <StackLayout>
        
        <Label Text="Bienvenido al Curso  de XAMARIN" FontSize="Title" Padding="30,10,30,10"/>
        <StackLayout Orientation="Horizontal">
            <Button x:Name="BtnExample" Text="click me"></Button>
            <Entry Placeholder="Ingrese Su valor"/>
        </StackLayout>

        <StackLayout VerticalOptions="CenterAndExpand">
            <Image Aspect="AspectFill" VerticalOptions="Center"
                   Source="http://18.218.178.167/imagesemail/target.jpg" />


        </StackLayout>

        <StackLayout Orientation="Vertical" BackgroundColor="Navy">

            <Label Text="Mi primer app del curso" HorizontalOptions="Center" 
                   VerticalOptions="CenterAndExpand" TextColor="White" FontAttributes="Bold" FontSize="20"/>
            
        </StackLayout>
    </StackLayout>

</ContentPage>
